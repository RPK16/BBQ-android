<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/fire_status_label2"
        android:layout_width="257dp"
        android:layout_height="23dp"
        android:layout_marginTop="332dp"
        android:text="Recommended times"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heat_it_up_title" />

    <TextView
        android:id="@+id/fire_status_label3"
        android:layout_width="97dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:text="90-205 °C 10 min"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fire_status_label2" />

    <TextView
        android:id="@+id/fire_status_label7"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:text="315+ °C 30 min"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fire_status_label2" />

    <TextView
        android:id="@+id/fire_status_label6"
        android:layout_width="115dp"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:text="205 - 315 °C 20 min"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/fire_status_label7"
        app:layout_constraintHorizontal_bias="0.548"
        app:layout_constraintStart_toEndOf="@+id/fire_status_label3"
        app:layout_constraintTop_toBottomOf="@+id/fire_status_label2" />

    <TextView
        android:id="@+id/remaining_time"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_marginTop="36dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fan_runtime_slider" />

    <TextView
        android:id="@+id/heat_it_up_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Heat It Up"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fire_status_label"
        android:layout_width="257dp"
        android:layout_height="23dp"
        android:layout_marginTop="192dp"
        android:text="Run the fan at full speed for:"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heat_it_up_title" />

    <TextView
        android:id="@+id/fan_minutes"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_marginEnd="16dp"
        android:text="05:00"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.926"
        app:layout_constraintStart_toEndOf="@+id/fire_status_label"
        app:layout_constraintTop_toTopOf="@+id/fire_status_label" />

    <SeekBar
        android:id="@+id/fan_runtime_slider"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:max="60"
        android:min="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fire_status_label" />

    <Button
        android:id="@+id/start_fire_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="32dp"
        android:text="Start Heating"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/fire_temp_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="Pit temparature:"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/current_pit_temp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/heat_it_up_title"
        app:layout_constraintTop_toBottomOf="@+id/heat_it_up_title" />

    <TextView
        android:id="@+id/current_pit_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:text="NaN"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/fire_temp_label"
        app:layout_constraintTop_toTopOf="@+id/fire_temp_label" />

</androidx.constraintlayout.widget.ConstraintLayout>
