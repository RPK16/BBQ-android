<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/remaining_time"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_marginTop="36dp"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fan_runtime_slider" />

    <TextView
        android:id="@+id/heat_it_up_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Heat It Up"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fire_status_label"
        android:layout_width="257dp"
        android:layout_height="23dp"
        android:layout_marginTop="244dp"
        android:text="Run the fan at full speed for:"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/heat_it_up_title" />

    <TextView
        android:id="@+id/run_fan_minutes_label"
        android:layout_width="96dp"
        android:layout_height="24dp"
        android:text="minutes"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.181"
        app:layout_constraintStart_toEndOf="@+id/fan_minutes"
        app:layout_constraintTop_toTopOf="@+id/fan_minutes" />

    <TextView
        android:id="@+id/fan_minutes"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_marginTop="44dp"
        android:text="5"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fire_status_label" />

    <SeekBar
        android:id="@+id/fan_runtime_slider"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:max="60"
        android:min="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fire_status_label" />

    <Button
        android:id="@+id/start_fire_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="92dp"
        android:text="Start Heating"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/fire_temp_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="Pit temparature:"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/current_pit_temp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/heat_it_up_title"
        app:layout_constraintTop_toBottomOf="@+id/heat_it_up_title" />

    <TextView
        android:id="@+id/current_pit_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:text="NaN"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/fire_temp_label"
        app:layout_constraintTop_toTopOf="@+id/fire_temp_label" />

</androidx.constraintlayout.widget.ConstraintLayout>
